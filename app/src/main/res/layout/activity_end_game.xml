<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EndGame"
    android:background="@drawable/background_end_game">

<androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarExam2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2471A3"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/titleEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/assistant_extralight"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarExam2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarExam2" />

    <ImageButton
        android:id="@+id/homeExam2"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/toolbarExam2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/toolbarExam2"
        app:layout_constraintRight_toRightOf="@+id/toolbarExam2"
        app:layout_constraintTop_toTopOf="@+id/toolbarExam2"
        app:srcCompat="@drawable/learn_button" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/assistant_extralight"
        android:text="Score: "
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarExam2"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/wrongAnswersButton"
        android:layout_width="254dp"
        android:layout_height="57dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_selector"
        android:text="Wrong Answer"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingTop="10sp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/fullExamButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/fullExamButton"
        app:layout_constraintRight_toRightOf="@+id/fullExamButton"
        app:layout_constraintTop_toBottomOf="@+id/scoreText"
        app:layout_constraintVertical_bias="1.0"/>
    <!--        app:srcCompat="@drawable/wrong_answers_button" />-->

    <TextView
        android:id="@+id/fullExamButton"
        android:layout_width="254dp"
        android:layout_height="57dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_selector"
        android:text="Full Exam"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingTop="10sp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/newExamButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/newExamButton"
        app:layout_constraintRight_toRightOf="@+id/newExamButton"/>
    <!--        app:srcCompat="@drawable/full_exam_button" />-->

    <TextView
        android:id="@+id/newExamButton"
        android:layout_width="254dp"
        android:layout_height="57dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="100dp"
        android:text="Start New Exam"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingTop="10sp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/postButton"
        android:layout_width="168dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp"
        android:text="Post Score"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingTop="10sp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/wrongAnswersButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreText"
        app:layout_constraintVertical_bias="0.25"/>


</androidx.constraintlayout.widget.ConstraintLayout>